            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- Various Path"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="30dp"
                    android:paddingEnd="0dp"
                    android:textStyle=""
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/textCommentTop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingStart="40dp"
                    android:paddingEnd="0dp"
                    android:textStyle=""
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <!-- Current EEPRom Status -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- EEPROM Status : "
                    android:paddingStart="30dp"
                    android:textStyle=""
                    android:layout_weight="0.25" />

                <TextView
                    android:id="@+id/textEEPRomStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Invalid"
                    android:textStyle=""
                    android:layout_weight="0.12" />

                <!-- Screen Type -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- Screen Type : "
                    android:paddingStart="20dp"
                    android:textStyle=""
                    android:layout_weight="0.20" />

                <TextView
                    android:id="@+id/textScreenType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Unknown"
                    android:textStyle=""
                    android:layout_weight="0.12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.03" />

                <!-- Screen Control -->
                <Button
                    android:id="@+id/btnScreenType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Check"
                    android:textStyle=""
                    android:layout_weight="0.14" />

                <Button
                    android:id="@+id/btnScreenOn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SCREEN OFF"
                    android:textStyle=""
                    android:layout_weight="0.14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="- Initialize Mode : "
                    android:paddingStart="30dp"
                    android:textStyle=""
                    android:layout_weight="0.25" />

                <!-- Current Mode -->
                <TextView
                    android:id="@+id/textInitModeCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mode #1"
                    android:textStyle=""
                    android:layout_weight="0.12" />
<!--
                <LinearLayout
                    android:layout_width="0dp"
