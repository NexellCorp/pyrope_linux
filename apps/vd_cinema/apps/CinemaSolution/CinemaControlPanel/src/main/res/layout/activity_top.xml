            <!-- Mode Table -->
            <LinearLayout
                android:background="@drawable/draw_line_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:gravity="center"
                android:weightSum="1">

                <ListView
                    android:id="@+id/listView_mode_apply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:footerDividersEnabled="true" />
            </LinearLayout>

        </LinearLayout>

        <!-- Menu Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.18"
            android:padding="10dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:text="Diagnostics"
                android:id="@+id/btnMenuDiagonostics" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Display Check"
                android:id="@+id/btnMenuDisplayCheck"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Display Mode"
                android:id="@+id/btnMenuDisplayMode"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="System"
                android:id="@+id/btnMenuSystem" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Account"
                android:id="@+id/btnMenuAccount"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusBarLayoutTop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>