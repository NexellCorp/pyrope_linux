<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#FFE0E0E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:background="@drawable/draw_line_left_top_bottom"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_cabinet_id"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="0.4"/>

        <TextView
            android:background="@drawable/draw_line_left_top_bottom"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_status"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="0.6"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listview_dot_correction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_alignParentBottom="true" >
        <Button
            android:id="@+id/btnDotCorrectionCheckAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check All" />

        <Button
            android:id="@+id/btnDotCorrectionUnCheckAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnCheck All" />

        <Button
            android:id="@+id/btnDotCorrectionApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLY" />
    </LinearLayout>


</RelativeLayout>