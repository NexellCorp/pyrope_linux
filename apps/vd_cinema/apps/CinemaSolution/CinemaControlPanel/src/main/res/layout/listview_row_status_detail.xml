<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/listview_row_status_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.2"/>

    <RadioGroup
        android:background="@drawable/draw_line_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.4">

        <RadioButton
            android:id="@+id/listview_row_status_detail_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="PASS"
            android:clickable="false"/>

        <RadioButton
            android:id="@+id/listview_row_status_detail_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="FAIL"
            android:clickable="false"/>

        <RadioButton
            android:id="@+id/listview_row_status_detail_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="ERROR"
            android:clickable="false"/>
    </RadioGroup>

    <TextView
        android:id="@+id/listview_row_status_detail_text"
        android:background="@drawable/draw_line_left_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_weight="0.25"/>

    <Button
        android:id="@+id/listview_row_status_detail_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.15"
        android:text="@string/txt_detail"/>

</LinearLayout>