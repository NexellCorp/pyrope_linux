<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/listview_row_text_button_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.1"/>

    <TextView
        android:id="@+id/listview_row_text_button_mode"
        android:background="@drawable/draw_line_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_weight="0.1"
        />

    <TextView
        android:id="@+id/listview_row_text_button_text"
        android:background="@drawable/draw_line_left_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_weight="0.45"/>

    <Button
        android:id="@+id/listview_row_text_button_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Del"
        android:layout_weight="0.08"
        />

    <Button
        android:id="@+id/listview_row_text_button_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="update"
        android:layout_weight="0.14"
        />


    <Button
        android:id="@+id/listview_row_text_button_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.13"
        android:text="Apply"/>

</LinearLayout>